@model IEnumerable<Budgeter.Models.CodeFirst.BankAccount>

<h3>Accounts</h3>
<hr />

<div class="container">
    <div class="row">
        <div class="col-md-7">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">Manage</h4>
                </div>
                <section class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <tr>
                                <th>
                                    Account
                                </th>
                                <th>
                                    Balance
                                </th>
                                <th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Balance)
                                        @if(item.Balance <50)
                                        {
                                            <p class="text-danger">@ViewBag.Overdraft</p>
                                        }
                                    </td>
                                    <td>
                                        @Html.ActionLink("View Transactions", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-success" })
                                        <button class="edit-button btn btn-sm btn-success" data-id="@item.Id" type="button">Edit</button>
                                        <button class="delete-button btn btn-sm btn-danger" data-id="@item.Id" type="button">Delete</button>     
                                    </td>
                                </tr>
                            }
                        </table>
                       </div>
                    @Html.ActionLink("View All Transactions", "Index", "Transactions", null, new { @class = "btn btn-sm btn-success" })


                    </section> 
                </div> 
          </div> 
        <div>
            @Html.Action("_Create", "BankAccounts")
        </div>
        <div id="edit-div" class="delete-div"></div>
    </div>
</div>

@section scripts{

    <script type="text/javascript">
       
            $('.edit-button').click(function () {
                $('#edit-div').load('/BankAccounts/_Edit/' + $(this).data('id'));
            });

            $('.delete-button').click(function () {
                $('.delete-div').load('/BankAccounts/_Delete/' + $(this).data('id'));
            });
        
    </script>
    }


