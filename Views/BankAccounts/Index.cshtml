@model IEnumerable<Budgeter.Models.CodeFirst.BankAccount>

<h3>Accounts</h3>
<hr />

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">Manage</h4>
                </div>
                <section class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <tr>
                                <th>
                                    Account
                                </th>
                                <th>
                                    Balance
                                </th>
                                <th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Balance)
                                        @if(item.Balance <50)
                                        {
                                            <p class="text-danger">@ViewBag.Overdraft</p>
                                        }
                                    </td>
                                    <td>
                                        <button class="edit-button btn btn-sm btn-success" data-id="@item.Id" type="button">Edit</button>
                                        @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-success edit-button" })*@
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-danger"})
      
                                    </td>
                                </tr>
                            }
                        </table>
                       </div>
                    </section> 
                </div> 
            <div>
                @Html.Action("_Create", "BankAccounts")
            </div>
          </div> 
        <div id="edit-div">
            @Html.Action("_Edit", "BankAccounts", Model)
        </div>
    </div>
</div>

@section scripts{
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        $(function () {
            $('.edit-button').click(function () {
                $('#edit-div').load('/BankAccounts/Edit/' + $(this).data('id'));
            });
        });
    </script>
    }


