@model IEnumerable<Budgeter.Models.CodeFirst.Category>

<h3>Categories</h3>
<hr />

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">Manage</h4>
                </div>
                <section class="panel-body">
                    <div class="table-responsive">
                        <table id="budget" class="display" @*class="table table-striped table-hover"*@>
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            <button class="editcat-button btn btn-sm btn-success" data-id="@item.Id" type="button">Edit</button>
                                            <button class="deletecat-button btn btn-sm btn-danger" data-id="@item.Id" type="button">Delete</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                     </div> 
                  </section>
                </div> 
            </div>
        <div>
            @Html.Action("_Create", "Categories")
        </div>
        <div id="editcat-div" class="deletecat-div"></div>
        </div> 
    </div> 

@section scripts{

    <script type="text/javascript">

        $('#budget').DataTable({
            "paging": true,
            "pageLength": 5,
            "bLengthChange": false,
            "ordering": false,
            "info": false,
            "searching": false
        });

            $('.editcat-button').click(function () {
                $('#editcat-div').load('/Categories/_Edit/' + $(this).data('id'));
            });

            $('.deletecat-button').click(function () {
                $('.deletecat-div').load('/Categories/_Delete/' + $(this).data('id'));
            });        
         
    </script>
}


