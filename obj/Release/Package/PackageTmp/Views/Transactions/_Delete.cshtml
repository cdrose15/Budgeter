@model Budgeter.Models.CodeFirst.Transaction

    @using (Html.BeginForm("Delete", "Transactions"))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)
                <div class="container">
                        <div class="col-md-6">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">Delete Transaction</h4>
                                </div>
                                <section class="panel-body ">
                                    <div class="form-actions no-color">
                                        <h5>Are you sure you want to delete this transaction for $@Model.Amount?</h5>
                                        @Html.ActionLink("Cancel","Details","BankAccounts", new { @id = Model.BankAccount.Id }, new { @class = "btn btn-sm btn-default" })
                                        <input type="submit" value="Delete" class="btn btn-sm btn-danger" />
                                    </div>
                                </section>
                            </div>
                        </div>
                    </div>
    }
