@model Budgeter.Models.EditProfileViewModel
@{
    ViewBag.Title = "Update Profile";
}

<div class="container">
    <div class="row">
        <div class="col-md-10">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">Update Profile</h4>
                </div>
                <section class="panel-body ">
                    @using (Html.BeginForm("EditProfile", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        <div class="form-group">
                            @Html.LabelFor(m => m.FirstName ,new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Update" class="btn btn-lg btn-success btn-block" />
                            </div>
                        </div>
                    }
                </section>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




